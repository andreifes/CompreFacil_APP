<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/test3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_home_toolbar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="24dp"
            android:layout_toStartOf="@id/iv_carrinho_toolbar"
            android:layout_toEndOf="@id/iv_location_toolbar"
            android:fontFamily="@font/carter_one"
            android:text="Compre FÃ¡cil"
            android:textAlignment="center"
            android:textColor="@color/test6"
            android:textSize="30dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_perfil_toolbar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:elevation="20dp"
            android:src="@drawable/ic_profile" />

        <ImageView
            android:id="@+id/iv_carrinho_toolbar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:elevation="20dp"
            android:src="@drawable/ic_cart" />

        <ImageView
            android:id="@+id/iv_location_toolbar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/iv_perfil_toolbar"
            android:layout_alignBottom="@+id/iv_perfil_toolbar"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@id/iv_perfil_toolbar"
            android:elevation="20dp"
            android:src="@drawable/ic_location" />

    </RelativeLayout>
</RelativeLayout>