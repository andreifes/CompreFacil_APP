<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="16dp"
    android:background="@drawable/container_white"
    android:elevation="5dp">

    <TextView
        android:id="@+id/item_tv_produto_products"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="2dp"
        android:text="nome do produtonome do produto"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/item_iv_produto_products"
        app:layout_constraintStart_toStartOf="@+id/item_iv_produto_products"
        app:layout_constraintTop_toBottomOf="@+id/item_iv_produto_products" />

    <ImageView
        android:id="@+id/item_iv_produto_products"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/item_tv_preÃ§o_products"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="R$00,00"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/item_iv_addcarrinho_products"
        app:layout_constraintEnd_toStartOf="@+id/item_iv_addcarrinho_products"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/item_tv_produto_products"
        app:layout_constraintTop_toBottomOf="@+id/item_tv_produto_products"
        app:layout_constraintVertical_bias="0.428" />

    <ImageView
        android:id="@+id/item_iv_addcarrinho_products"
        android:layout_width="43dp"
        android:layout_height="39dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_tv_produto_products"
        app:srcCompat="@drawable/ic_add_cart" />


