<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pastelpink"
    tools:context=".activities.LoginActivity">

    <View
        android:id="@+id/v_container_login"
        style="@style/container_pastelpurple"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="-80dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_logo_login" />

    <ImageView
        android:id="@+id/iv_logo_login"
        android:layout_width="0dp"
        android:layout_height="250dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/acb_cadastrese_login"
        style="@style/button_white"
        android:layout_width="185dp"
        android:layout_height="48dp"
        android:layout_marginEnd="24dp"
        android:elevation="20dp"
        android:text="          Cadastre-se"
        app:layout_constraintEnd_toEndOf="@+id/v_container_login"
        tools:layout_editor_absoluteY="250dp">

    </androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/acb_entre_login"
        style="@style/button_dark_pastel_pink"
        android:layout_width="178dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="80dp"
        android:elevation="20dp"
        android:text="Entre"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/v_container_login"
        app:layout_constraintTop_toTopOf="@+id/v_container_login"
        tools:ignore="TextContrastCheck">

    </androidx.appcompat.widget.AppCompatButton>

    <EditText
        android:id="@+id/et_email_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:elevation="1dp"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/acb_cadastrese_login"
        app:layout_constraintStart_toStartOf="@+id/acb_entre_login"
        app:layout_constraintTop_toBottomOf="@+id/acb_entre_login"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/et_senha_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:elevation="1dp"
        android:ems="10"
        android:hint="Senha"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/et_email_login"
        app:layout_constraintStart_toStartOf="@+id/et_email_login"
        app:layout_constraintTop_toBottomOf="@+id/et_email_login"
        tools:ignore="TouchTargetSizeCheck" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/acb_entrar_login"
        style="@style/button_dark_pastel_pink"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:elevation="20dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:text="ENTRAR"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/v_container_login"
        app:layout_constraintEnd_toEndOf="@+id/et_senha_login"
        app:layout_constraintStart_toStartOf="@+id/et_senha_login"
        app:layout_constraintTop_toBottomOf="@+id/et_senha_login"
        tools:ignore="TextContrastCheck">

    </androidx.appcompat.widget.AppCompatButton>

</androidx.constraintlayout.widget.ConstraintLayout>