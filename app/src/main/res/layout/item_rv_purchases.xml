<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/container_white"
    android:elevation="20dp">


    <TextView
        android:id="@+id/item_tv_nome_purchases"
        android:layout_width="285dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/item_tv_cidade_purchases"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_iv_logo_purchases"
        app:layout_constraintTop_toTopOf="@+id/item_iv_logo_purchases" />

    <ImageView
        android:id="@+id/item_iv_logo_purchases"
        android:layout_width="97dp"
        android:layout_height="109dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/item_tv_datahora_purchases"
        app:layout_constraintTop_toBottomOf="@+id/item_tv_datahora_purchases"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/item_tv_status_purchase"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="84dp"
        android:text="Nº pedido"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/item_iv_logo_purchases"
        app:layout_constraintEnd_toStartOf="@+id/item_tv_preço_purchase"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/item_tv_cidade_purchases" />

    <TextView
        android:id="@+id/item_tv_preço_purchase"
        android:layout_width="70dp"
        android:layout_height="0dp"
        android:text="R$ 8,00"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/item_tv_status_purchase"
        app:layout_constraintEnd_toEndOf="@+id/item_tv_datahora_purchases"
        app:layout_constraintTop_toTopOf="@+id/item_tv_status_purchase" />

    <TextView
        android:id="@+id/item_tv_datahora_purchases"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="timestamp"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_tv_cidade_purchases"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="cidade"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/item_tv_status_purchase"
        app:layout_constraintEnd_toEndOf="@+id/item_tv_nome_purchases"
        app:layout_constraintStart_toStartOf="@+id/item_tv_nome_purchases" />

</androidx.constraintlayout.widget.ConstraintLayout>