<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/pastelpurple">

    <View
        android:id="@+id/item_v_container_categories"
        android:layout_width="154dp"
        android:layout_height="124dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/container_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_tv_categoria_categories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/item_v_container_categories"
        app:layout_constraintEnd_toEndOf="@+id/item_iv_categoria_categories"
        app:layout_constraintStart_toStartOf="@+id/item_iv_categoria_categories"
        app:layout_constraintTop_toBottomOf="@+id/item_iv_categoria_categories" />

    <ImageView
        android:id="@+id/item_iv_categoria_categories"
        android:layout_width="133dp"
        android:layout_height="97dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="@+id/item_v_container_categories"
        app:layout_constraintStart_toStartOf="@+id/item_v_container_categories"
        app:layout_constraintTop_toTopOf="@+id/item_v_container_categories"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>